<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:id="@+id/id_client_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Media -->


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                    android:id="@+id/id_client_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID CLIENT"
            />

            <TextView
                    android:id="@+id/hint_nom_client_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/secondary_text"
                    android:textColor="?android:attr/textColorSecondary"
            />

            <TextView
                    android:id="@+id/hint_prenom_client_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/supporting_text"
                    android:textColor="?android:attr/textColorSecondary"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/ajouterCompteur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginEnd="8dp"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/relever"
                    android:drawableTint="@color/purple_500"
                    android:text="Relever compteur"
                    style="?attr/borderlessButtonStyle"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/releverCompteur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/add"
                    android:drawableTint="@color/purple_500"
                    android:text="@string/action_2"
                    style="?attr/borderlessButtonStyle"
            />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>